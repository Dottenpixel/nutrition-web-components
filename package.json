{
    "name": "nutrition-web-components",
    "description": "Nutrition Web Components - NOVA and Nutri-score badges",
    "private": true,
    "devDependencies": {
        "@stencil/core": "0.17.0",
        "@stencil/sass": "0.1.1",
        "@types/jest": "23.3.13",
        "@types/puppeteer": "1.11.1",
        "@wdio/browserstack-service": "^5.3.4",
        "@wdio/cli": "^5.3.5",
        "@wdio/local-runner": "^5.3.5",
        "@wdio/mocha-framework": "^5.3.2",
        "@wdio/sync": "^5.3.2",
        "browserstack-local": "^1.3.7",
        "http-server": "^0.11.1",
        "jest": "23.6.0",
        "jest-cli": "23.6.0",
        "lerna": "3.10.6",
        "npm-run-all": "^4.1.5",
        "puppeteer": "1.11.0",
        "webdriverio": "^5.3.5"
    },
    "scripts": {
        "nutri-score.dev": "cd packages/nutri-score && stencil build --dev --watch --serve",
        "nutri-score.build": "cd packages/nutri-score && stencil build --build",
        "nutri-score.test.spec": "cd packages/nutri-score && stencil test --spec",
        "nutri-score.test.e2e": "cd packages/nutri-score && stencil test --e2e",
        "nova.dev": "cd packages/nova && stencil build --dev --watch --serve",
        "nova.build": "cd packages/nova && stencil build --build",
        "nova.test.spec": "cd packages/nova && stencil test --spec",
        "nova.test.e2e.stencil": "cd packages/nova && stencil test --e2e",
        "nova.test.e2e.local": "run-p --race nova.test.e2e.serve nova.test.e2e.wdio:local",
        "nova.test.e2e.remote": "rnpm run nova.test.e2e.serve & nova.test.e2e.wdio:browserstack",
        "nova.test.e2e.wdio:browserstack": " ./node_modules/.bin/wdio wdio.conf.js",
        "nova.test.e2e.wdio:local": " ./node_modules/.bin/wdio wdio.conf.local.js",
        "nova.test.e2e.serve": "http-server packages/nova/ -s",
        "test": "npm run nutri-score.test.spec && npm run nova.test.spec && npm run nutri-score.test.e2e && npm run nova.test.e2e.stencil"
    }
}
