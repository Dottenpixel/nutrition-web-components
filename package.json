{
    "name": "nutrition-web-components",
    "description": "Nutrition Web Components - NOVA and Nutri-score badges",
    "private": true,
    "devDependencies": {
        "@stencil/core": "0.17.0",
        "@stencil/sass": "0.1.1",
        "@types/jest": "23.3.13",
        "@types/puppeteer": "1.11.1",
        "@wdio/cli": "^5.3.5",
        "@wdio/local-runner": "^5.3.5",
        "@wdio/mocha-framework": "^5.3.2",
        "@wdio/sauce-service": "^5.3.2",
        "@wdio/sync": "^5.3.2",
        "http-server": "^0.11.1",
        "jest": "23.6.0",
        "jest-cli": "23.6.0",
        "lerna": "3.10.6",
        "puppeteer": "1.11.0",
        "webdriverio": "^5.3.5"
    },
    "scripts": {
        "nutri-score.dev": "cd packages/nutri-score && stencil build --dev --watch --serve",
        "nutri-score.build": "cd packages/nutri-score && stencil build --build",
        "nutri-score.test.spec": "cd packages/nutri-score && stencil test --spec",
        "nutri-score.test.e2e": "cd packages/nutri-score && stencil test --e2e",
        "nova.dev": "cd packages/nova && stencil build --dev --watch --serve",
        "nova.build": "cd packages/nova && stencil build --build",
        "nova.test.spec": "cd packages/nova && stencil test --spec",
        "nova.test.e2e": "cd packages/nova && stencil test --e2e",
        "nova.testcafe:local": "./node_modules/.bin/testcafe chrome packages/nova/tests/test.js --app \"http-server packages/nova/ -s\"",
        "test": "npm run nutri-score.test.spec && npm run nova.test.spec && npm run nutri-score.test.e2e && npm run nova.test.e2e",
        "testcafe:browserstack": "./node_modules/.bin/wdio wdio.conf.js"
    }
}
